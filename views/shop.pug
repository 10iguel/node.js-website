extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

block content

    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://nakedsecurity.sophos.com/wp-content/uploads/sites/2/2017/01/mongodb.png?w=775", alt="A MongoDB course")
                        div.card__content
                            h2.product__price $19.90
                            p.product__description A very interesting course about MongoDB
                        .card__actions
                            button.btn Add a Cart
        else
            h1 No products

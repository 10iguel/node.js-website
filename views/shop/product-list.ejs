<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0){ %>
            <div class="grid">
                <% for (let product of prods){%>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"> <%= product.title%></h1>
                        </header>
                        <div class="card__image">
                            <img src="https://nakedsecurity.sophos.com/wp-content/uploads/sites/2/2017/01/mongodb.png?w=775" alt='A MongoDB course'>
                        </div>
                        <div class="card__content">
                            <h2 class="product__price"> $20.50</h2>
                            <p class="product__description">The most used on this year. Learn this!! </p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add Product</button>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>
